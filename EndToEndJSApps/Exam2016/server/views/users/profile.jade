extends ../shared/layout

block head
    style
        | img{width: 100px}

block main-content
    .row
        .col-md-3
        .col-md-6
            form.form-horizontal(method="post")
                h2.form-sign-in-heading Profile
                div.text-center
                    if user.avatar
                        img(src="#{user.avatar}")
                    else
                        img(src="https://ninjageisha.files.wordpress.com/2012/08/ninja-tadaa.jpg")
                    //img(src="#{user.avatar}")
                br
                .text-center
                    | RATING: #{user.rating}
                br
                .form-group
                    label Profile image url:
                    input(id="avatar" class="form-control" type="text" name="avatar" placeholder="Profile image", value="#{user.avatar}")
                label(for="email") E-mail
                input(id="email" class="form-control" type="email" name="email" placeholder="E-mail", required, value="#{user.email}")
                br
                label(for="first-name") First Name
                input(id="first-name" class="form-control" type="text" name="firstName" placeholder="First Name", required, value="#{user.firstName}")
                br
                label(for="last-name") Last Name
                input(id="last-name" class="form-control" type="text" name="lastName" placeholder="Last Name", required, value="#{user.lastName}")
                br
                .form-group
                    h2 Profiles:
                .form-group
                    label Facebook
                    input(id="facebook" class="form-control" type="text" name="externalProfiles.facebook" placeholder="Facebook (optional)", value="#{user.externalProfiles.facebook}")
                .form-group
                    label YouTube
                    input(id="youtube" class="form-control" type="text" name="externalProfiles.youTube" placeholder="YouTube (optional)", value="#{user.externalProfiles.youTube}")
                br
                br
                br
                input(type="submit" class="btn btn-md btn-primary btn-block" value="Update")