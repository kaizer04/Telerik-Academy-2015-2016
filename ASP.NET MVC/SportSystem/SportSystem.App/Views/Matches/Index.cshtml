@model IEnumerable<SportSystem.App.Models.ViewModels.ConciseMatchViewModel>

@{ 
    ViewBag.Title = "All Matches";
}
@Html.DisplayForModel()

<ul class="pagination">
    @for (int page = 1; page <= ViewBag.TotalPages; page++)
    {
        string listItemClass = string.Empty;
        if (page == ViewBag.CurrentPage)
        {
            listItemClass = "active";
        }

        <li class="@listItemClass">@Html.ActionLink(page.ToString(), "Index", "Matches", routeValues: new { page = page, count = 5 }, htmlAttributes: null)</li>
        @*@:<li>@Html.ActionLink(page.ToString(), "Index", "Matches", routeValues: new { page = page, count = 5 }, htmlAttributes: null)</li>*@
    }
</ul>